<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="transaction"
            type="com.huy.fitsu.data.model.Transaction" />

        <variable
            name="category"
            type="com.huy.fitsu.data.model.Category" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_large">

            <ImageView
                android:id="@+id/transaction_value_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_receipt"
                app:layout_constraintBottom_toBottomOf="@id/transaction_value_text_input_layout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/transaction_value_text_input_layout" />


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/transaction_value_text_input_layout"
                style="@style/AppTheme.TextInputLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_extra_large"
                android:hint="@string/transaction_value_edit_text_hint"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/transaction_value_icon"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/transaction_value_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"
                    android:text="@{String.valueOf(transaction.value)}"
                    tools:text="100"/>

            </com.google.android.material.textfield.TextInputLayout>

            <ImageView
                android:id="@+id/transaction_date_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@id/transaction_date_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/transaction_date_button" />

            <Button
                android:id="@+id/transaction_date_button"
                style="@style/AppTheme.DateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_extra_large"
                android:layout_marginTop="@dimen/layout_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/transaction_date_icon"
                app:layout_constraintTop_toBottomOf="@id/transaction_value_text_input_layout"
                showDate="@{transaction.date}"
                tools:text="Saturday, 30-04-2020" />

            <ImageView
                android:id="@+id/transaction_category_icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:src="@drawable/ic_calendar"
                app:layout_constraintBottom_toBottomOf="@id/transaction_category_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/transaction_category_button" />

            <Button
                android:id="@+id/transaction_category_button"
                style="@style/AppTheme.DateButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/layout_margin_extra_large"
                android:layout_marginTop="@dimen/layout_margin_large"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/transaction_category_icon"
                app:layout_constraintTop_toBottomOf="@id/transaction_date_button"
                android:text="@{category.title}" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/transaction_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_tick"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/transaction_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</layout>