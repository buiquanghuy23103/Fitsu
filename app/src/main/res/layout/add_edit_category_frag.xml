<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="category"
            type="com.huy.fitsu.data.model.Category" />
    </data>

    <ScrollView
        android:id="@+id/add_edit_categories_form_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/category_title_edit_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:layout_marginEnd="@dimen/layout_margin_large"
                android:background="@null"
                android:hint="@string/category_title_edit_text_hint"
                android:inputType="text"
                android:text="@{category.title}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/category_budget_duration_button"
                app:layout_constraintTop_toTopOf="parent" />


            <View
                android:id="@+id/category_title_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/layout_margin_large"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/category_title_edit_text" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/AppTheme.Button.Wide"
                android:id="@+id/category_budget_duration_button"
                app:layout_constraintTop_toBottomOf="@id/category_title_divider"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/category_budget_duration_hint"
                app:icon="@drawable/ic_repeat"
                />

            <View
                android:id="@+id/category_budget_duration_divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"
                app:layout_constraintTop_toBottomOf="@id/category_budget_duration_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/category_change_color_button"
                style="@style/AppTheme.Button.Wide"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/category_change_color_button_label"
                app:icon="@drawable/ic_solid_dot"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/category_budget_duration_divider" />


            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/category_update_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_large"
                android:contentDescription="@string/update_category_button_content_description"
                android:src="@drawable/ic_tick"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/category_delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin_large"
                android:src="@drawable/ic_delete"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</layout>