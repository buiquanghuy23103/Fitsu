<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Fitsu" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
        <item name="materialButtonStyle">@style/Widget.Fitsu.Button</item>
        <item name="floatingActionButtonStyle">@style/Widget.Fitsu.Button.FloatingActionButton</item>
        <!-- Use dark icons on status bar -->
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
    </style>

    <style name="Widget.Fitsu.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/accentColor</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>


    <!--TEXT INPUT-->
    <style name="Widget.Fitsu.TextInputLayout" 
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primaryDarkColor</item>
        <item name="hintTextAppearance">@style/TextAppearance.MaterialComponents.Subtitle2</item>
        <item name="hintTextColor">@color/primaryTextColor</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <!--  BUTTON  -->
    <style name="Widget.Fitsu.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="backgroundTint">@color/primaryDarkColor</item>
    </style>

    <style name="Widget.Fitsu.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="Widget.Fitsu.Button.FloatingActionButton"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">@color/white</item>
    </style>

    <style name="Widget.Fitsu.Button.Wide"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="iconPadding">@dimen/padding_extra_large</item>
        <item name="iconTint">@color/primaryTextColor</item>
        <item name="android:gravity">center_horizontal|start</item>
    </style>

    <style name="Widget.Fitsu.DateButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="Widget.Fitsu.EditText.Title"
        parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
        <item name="android:selectAllOnFocus">true</item>
    </style>

    <style name="Widget.Fitsu.ColorBadge"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="elevation">@dimen/elevation_none</item>
    </style>


    <style name="Widget.Fitsu.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="elevation">0dp</item>
        <item name="cardBackgroundColor">@color/cardViewBackgroundColor</item>
    </style>

    <style name="TextAppearance.Fitsu.ItemTitle"
        parent="TextAppearance.MaterialComponents.Headline6"/>

    <style name="TextAppearance.Fitsu.ItemSubtitle"
        parent="TextAppearance.MaterialComponents.Body2">
    </style>


</resources>
