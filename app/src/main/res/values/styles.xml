<resources>

    <!-- Base application theme. -->
    <style name="Theme.Fitsu" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:textColorPrimary">@color/primaryTextColor</item>
    </style>

    <style name="Widget.Fitsu.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@color/accentColor</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:minHeight">?attr/actionBarSize</item>
        <item name="titleTextAppearance">@style/TextAppearance.MaterialComponents.Headline6</item>
    </style>


    <!--TEXT INPUT-->
    <style name="AppTheme.TextInputLayout"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
    </style>

    <style name="AppTheme.ExposedDropdownMenu"
        parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
    </style>

    <!--BOTTOM NAVIGATION-->
    <style name="AppTheme.BottomNavigationView"
        parent="Widget.MaterialComponents.BottomNavigationView.PrimarySurface">
    </style>

    <!--  BUTTON  -->
    <style name="Widget.Fitsu.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/primaryTextColor</item>
        <item name="backgroundTint">@color/primaryDarkColor</item>
    </style>

    <style name="Widget.Fitsu.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="AppTheme.Button.FloatingActionButton"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="rippleColor">@color/white</item>
    </style>

    <style name="AppTheme.OutlineButton"
        parent="Widget.MaterialComponents.Button.OutlinedButton">
    </style>

    <style name="AppTheme.Button.Wide"
        parent="Widget.MaterialComponents.Button.TextButton">
        <item name="textAllCaps">false</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body1</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="iconPadding">@dimen/padding_extra_large</item>
        <item name="iconTint">@color/white</item>
        <item name="android:gravity">center_horizontal|start</item>
    </style>

    <style name="AppTheme.DateButton"
        parent="AppTheme.OutlineButton">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">?attr/editTextColor</item>
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:textAlignment">viewStart</item>
    </style>

    <style name="AppTheme.ImageButton"
        parent="Widget.AppCompat.ImageButton">
        <item name="backgroundColor">@android:color/transparent</item>
    </style>

    <!--  EDIT TEXT  -->
    <style name="AppTheme.TitleEditText"
        parent="Widget.AppCompat.EditText">
        <item name="android:padding">@dimen/padding_large</item>
        <item name="android:background">@null</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Headline4</item>
    </style>

    <!--  COLOR BADGE  -->
    <style name="AppTheme.ColorBadge"
        parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="elevation">@dimen/elevation_none</item>
    </style>


    <!--  TEXT STYLE  -->
    <style name="AppTheme.TextAppearance"
        parent="TextAppearance.MaterialComponents.Body1"/>

    <style name="AppTheme.TextAppearance.ItemTitle"
        parent="TextAppearance.MaterialComponents.Subtitle1"/>

    <style name="AppTheme.TextAppearance.ItemSubtitle"
        parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/less_white</item>
    </style>

    <style name="AppTheme.TextAppearance.Caption"
        parent="TextAppearance.MaterialComponents.Caption"/>


</resources>
